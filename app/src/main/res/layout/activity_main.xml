<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#DFF8EB"

    tools:context="com.example.kunal.project.MainActivity">

    <Button
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="shared preferences"
        android:textStyle="italic"
        android:id="@+id/shared"
        android:onClick="Shared"

        android:layout_gravity="center_horizontal"
        android:background="#AED6F1"
        android:layout_above="@+id/button4"
        android:layout_alignRight="@+id/button4"
        android:layout_alignEnd="@+id/button4"
        android:layout_marginBottom="29dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="store File internally"
        android:textStyle="italic"
        android:id="@+id/filedata"
        android:onClick="fileinternal"
        android:background="#AED6F1"
        android:layout_above="@+id/sql"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="SQL Database"
        android:textStyle="italic"
        android:background="#AED6F1"
        android:id="@+id/sql"
        android:onClick="SQLclick"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="111dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="Store File Externally"
        android:background="#AED6F1"
        android:textStyle="italic"
        android:id="@+id/button4"
        android:onClick="fileExternal"
        android:layout_above="@+id/filedata"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Choose Any One "
        android:id="@+id/textView8"
        android:textStyle="bold"
        android:layout_marginTop="37dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="50dp"
        android:fontFamily="cursive"
        />
</RelativeLayout>
