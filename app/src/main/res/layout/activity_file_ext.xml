<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#DFF8EB"
    tools:context="com.example.kunal.project.FileActivity">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:id="@+id/writeextmessage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Enter a message"
        android:textCursorDrawable="@null"
        />
    <Button
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:text="Write Ext Public"
        android:textStyle="italic"
        android:background="#AED6F1"
        android:id="@+id/button3"
        android:nestedScrollingEnabled="false"
        android:onClick="writeextmessage"
        android:layout_below="@+id/writeextmessage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:text="Write ext private"
        android:id="@+id/button5"
        android:background="#AED6F1"
        android:onClick="writeextdeletionmessage"
        android:textStyle="italic"
        android:layout_alignTop="@+id/button6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:text="Read Ext Public"
        android:background="#AED6F1"
        android:id="@+id/button2"
        android:textStyle="italic"
        android:onClick="readextmessage"
        android:layout_below="@+id/writeextmessage"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="350dp"
        android:layout_height="130dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/fileexternaltext"

        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:text="Read ext private"
        android:id="@+id/button6"
        android:textStyle="italic"
        android:background="#AED6F1"
        android:onClick="readextdeletemessage"
        android:layout_below="@+id/button10"
        android:layout_alignLeft="@+id/button10"
        android:layout_alignStart="@+id/button10"
        android:layout_marginTop="32dp" />

    <Button
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:text="Write Root Public"
        android:id="@+id/button9"
        android:onClick="writeroot"
        android:background="#AED6F1"
        android:textStyle="italic"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/button3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:text="Read Root Public"
        android:id="@+id/button10"
        android:background="#AED6F1"
        android:onClick="readroot"
        android:layout_alignTop="@+id/button9"
        android:layout_alignRight="@+id/fileexternaltext"
        android:layout_alignEnd="@+id/fileexternaltext" />

</RelativeLayout>
