<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#DFF8EB"
    tools:context="com.example.kunal.project.SharedActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp"
        android:id="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Roll no"
        android:layout_below="@+id/name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="54dp"
        android:id="@+id/textView5" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/roll_no"
        android:layout_alignStart="@+id/roll_no"
        android:textCursorDrawable="@null"
        />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/roll_no"
        android:inputType="number"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/Text"
        android:layout_alignStart="@+id/Text"
        android:textCursorDrawable="@null"
        />

    <Button
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="Save Info"
        android:id="@+id/store"
        android:textStyle="italic"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="saveInfo"
        android:background="#AED6F1"
        />

    <Button
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:textStyle="italic"
        android:text="Display"
        android:id="@+id/button"
        android:onClick="display"
        android:background="#AED6F1"
        android:layout_alignTop="@+id/store"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/Text"
        android:layout_marginTop="101dp"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
